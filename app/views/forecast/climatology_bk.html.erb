<div class="row">
    <div class="col-md-6 col-md-offset-3">
	<div class="section-title text-center">

	    <h2><%= @page_title %></h2>

	    <% info = @download_dir.split("/")[2].split("_") %> 

	    <h4>Hindcast Period: <%= info[-7] %> --- <%= info[-6] %> </h4>

	    <h4>Months of Forecast: <%= info[-5] %> --- <%= info[-4] %></h4>  

	</div>
    </div>
</div>

<!-- Page Title end -->

<div class="row">
    <div class="wrapper">
	<div class="course-box shop-wrapper">



	    <% @png_files.each do |png| %>
		<div class="col-md-3">
		    <div class="course-box shop-wrapper">
			<div class="image-wrap entry">

			    <%= link_to (image_tag png[28..-1], class: "img-responsive", width: "600", style: "#{@img_rotate}" ), png[28..-1],  target: :_blank  %>


			    <div align=center>
				<%= link_to ">> Download NetCDF <<", root_url + @download_dir + "/"+ png[-29..-16]+ ".nc" %>

			    </div>
				<br/>

			</div>
		    </div>
		</div>

		<% end #@anom_files.each do |anom| %>

	    </div>
    </div>
</div>

<div class="col-md-12">
    <div class="course-details shop-box text-center">
	<div class="p-3 mb-2 bg-info text-white">

	</div>
    </div>
</div>


