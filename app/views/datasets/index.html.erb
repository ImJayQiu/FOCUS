
<p id="notice"><%= notice %></p>

<h1>Datasets</h1>
	<table class=table>
	    <tr align=center>
		<td>
		    <%= button_to 'New Dataset', new_dataset_path, method: :get %>
		</td>
		<td>
		    <%= button_to 'Home Page', welcome_home_path, method: :get %>
		</td>
	    </tr>
	</table>

	<br>

	<table class=table>
	    <thead>
		<tr>
		    <th>Name</th>
		    <th>Dtype</th>
		    <th>Active</th>
		    <th colspan="3"></th>
		</tr>
	    </thead>

	    <tbody>
		<% @datasets.each do |dataset| %>
		    <tr>
			<td><%= dataset.name %></td>
			<td><%= dataset.dtype %></td>
			<td><%= dataset.active %></td>
			<td><%= link_to 'Show', dataset %></td>
			<td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
			<td><%= link_to 'Del', dataset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		    </tr>
		<% end %>
	    </tbody>
	</table>

	<br>


