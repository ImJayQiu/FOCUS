

<h3><font color="white">Forecast Customization System</font></h3>
<h3><font color="white">Log In</font></h3>

<div class="btn-wrapper">
    <div class="text-center">

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	    <div class="field">
		<%= f.email_field :email, autofocus: true, placeholder: "Email" %>
	    </div>
	    <br/>
	    <div class="field">
		<%= f.password_field :password, placeholder: "Password" %>
	    </div>

	    <% if devise_mapping.rememberable? %>
		<div class="field">
		    <%= f.check_box :remember_me %>
		    <%= f.label :remember_me %>
		</div>
	    <% end %>

	    <div class="actions">
		<%= f.submit "Log in" %>
	    </div>
	<% end %>

	    <div class="actions">
  <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-txt" %><br />
	    </div>

	<%#= render "users/shared/links" %>

    </div>
</div><!-- end row -->
